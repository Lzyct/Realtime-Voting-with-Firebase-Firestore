<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape android:shape="oval">
            <solid android:color="@color/colorPrimary" />
            <stroke android:width="@dimen/space4" android:color="@color/colorPrimary" />
            <size android:width="@dimen/space16" android:height="@dimen/space16" />
        </shape>
    </item>
    <item android:state_selected="false">
        <shape android:shape="oval">
            <stroke android:width="@dimen/space8" android:color="@color/hintColor" />
            <size android:width="@dimen/space8" android:height="@dimen/space8" />
        </shape>
    </item>
</selector>


